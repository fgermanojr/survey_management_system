<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>QuestionCount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @surveys.each do |s| %>
    <tr>
      <td><%= s.id %></td>
      <td><%= s.survey_text %></td>
      <td><%= s.description %></td>
      <td><%= s.questions.count %></td>
      <% if current_user.is_admin %>
        <td><%= button_to("Show", survey_path(id: s.id), method: :get) %></td>
        <td><%= button_to("Edit", edit_survey_path(id: s.id), method: :put) %></td>
      <% end %>
      <td><%= button_to("Take", new_user_survey_taken_path(user_id: current_user.id, survey_id: s.id), method: :get) %></td>
    </tr> 
  <% end %>   
</table>          
<br>
<br>

<% if current_user.is_admin %>
  <%= button_to "New Survey", new_survey_path %>
  <%= button_to "New User", new_user_path %>
<% end %>
